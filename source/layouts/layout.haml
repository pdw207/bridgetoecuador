%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title= data.page.title || "Bridge To Ecuador"
    %meta{:content => data.page.description || "Connecting Youth to Ecuador", :name => "description"}
    %meta{:content => "width=device-width", :name => "viewport"}
    = javascript_include_tag "libs/modernizr-2.8.3"
    = stylesheet_link_tag "main"
  %body
    /[if lt IE 7] <p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p>
    %header.main-header
      .main-header-inner
        =link_to '/' do
          = image_tag "logo.png", alt: "Bridge to Ecuador", class: "logo"
        = link_to "javascript:void(0)", class: "mobile-menu" do
          =partial "assets/svg/hamburger.svg"
        %nav
          %ul.main-menu
            %li
              = link_to t('navigation.programs'),'/programs.html', class: "more"
              %ul.submenu
                %li =link_to t('navigation.camps'), "javascript:void(0)"
                %li
                  =link_to t('navigation.comunity_service'), "javascript:void(0)"
                %li
                  =link_to t('navigation.homeland_tours'), "javascript:void(0)"
            %li= link_to t('navigation.why_ecuador'), '/why_ecuador.html'
            %li= link_to t('navigation.request_information'), '/request_info.html'
          %ul.top-menu
            %li= link_to t('navigation.create_a_custom_trip'), '/request_info.html'
            %li
              / %span.phone= partial "assets/svg/phone.svg"
              / %span= link_to t('navigation.telephone'), "tel:#{t('navigation.telephone')}"
              = link_to "tel:#{t('navigation.telephone')}" do
                %span.phone= partial "assets/svg/phone.svg"
                = t 'navigation.telephone'
    .main
      = yield
    %footer
      %p= "Copyright &copy; #{Time.now.year} Bridge To Ecuador"

    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"}
    :javascript
      window.jQuery || document.write('<script src="library/js/vendor/jquery-2.1.1.js"><\/script>')
    = javascript_include_tag "main"
    = javascript_include_tag "navigation"
    = javascript_include_tag "slideshow"

